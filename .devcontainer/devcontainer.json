{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers-extra/features/pre-commit:latest": {},
    "ghcr.io/devcontainers/features/python:latest": {},
    "ghcr.io/wxw-matt/devcontainer-features/command_runner:latest": {
      "command1": "pre-commit install",
      "command1": "git submodule update --init --recursive",
      "command1": "git config --global alias.st status",
      "command1": "git config --global alias.unstage reset HEAD --",
      "command1": "git config --global alias.diffc diff --cached"
    }
  }
}
