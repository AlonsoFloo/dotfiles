# reading standard files
for file in ~/dotfiles/bash/{exports,functions,colors,prompt,aliases,auto-complete,extras,hello}; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file"
done;

# reading host file
file=~/dotfiles/bash/byhost/`hostname`
if [[ -r $file ]]; then
	[ -r "$file" ] && [ -f "$file" ] && source "$file"
fi

unset file current_dir
