# reading standard files
current_dir="$( dirname "${BASH_SOURCE[0]}" )"
for file in $current_dir/{exports,functions,colors,prompt,aliases,auto-complete,extras,hello}; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file"
done;

# reading host file
file=$current_dir/byhost/`hostname`
if [[ -r $file ]]; then
	[ -r "$file" ] && [ -f "$file" ] && source "$file"
fi

unset file current_dir
