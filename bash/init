# If not running interactively, don't do anything
[ -z "$PS1" ] && return
if [ -z "$BASH_VERSION" ]; then
    return
fi

# reading the default bashrc
if [ -r /etc/bashrc ] && [ -f /etc/bashrc ]; then
      . /etc/bashrc
fi

# reading standard files
for file in ~/.bash/{exports,functions,colors,prompt,aliases,auto-complete,extras,hello}; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file"
done;

# reading host file
file=~/.bash/byhost/`hostname`
if [[ -r $file ]]; then
	[ -r "$file" ] && [ -f "$file" ] && source "$file"
fi

unset file
