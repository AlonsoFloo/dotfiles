eth0_ip="$(ifconfig | grep -A 1 'eth0' | tail -1 | cut -d ':' -f 2 | cut -d ' ' -f 1)"

external_ip=
city=
if [[ -x /usr/bin/curl ]]; then
	external_ip="$(myip)"

	city="$(mycity)"
fi

printf "${color_yellow}\n"
printf "\tUptime :`uptime`\n"
printf "\teth0 : $eth0_ip"
printf "\t\tExternal : "

if [[ -n $external_ip ]]; then
	printf "$external_ip\n"
else
	printf "\n"
fi

if [[ -n $city ]]; then
	printf "\tLocation : $city\n"
fi


unset eth0_ip external_ip city
