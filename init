# Using BASH
if [ $SHELL == "/bin/bash" ]; then
	# If not running interactively, don't do anything
	[ -z "$PS1" ] && return

	# reading the default bashrc
	if [ -r /etc/bashrc ] && [ -f /etc/bashrc ]; then
		  . /etc/bashrc
	fi

	# Init custom Bash
	file=~/dotfiles/bash/init
	if [[ -r $file ]]; then
		[ -r "$file" ] && [ -f "$file" ] && source "$file"
	fi

	unset file
fi
